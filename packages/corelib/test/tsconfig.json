{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "emitDeclarationOnly": false,
    "types": [
      "jquery",
      "jquery.validation",
      "jest"
    ],
    "rootDir": "../",
    "outDir": "../out/test",
    "paths": {
      "@/*": [
        "../src/*"
      ],
      "@optionaldeps/*": [
        "./testutil/*-testmodule"
      ]
    },
    "noImplicitAny": false
  },
  "include": [
    "../src/globals/jquery-globals.ts",
    "../src/globals/jquery.validation-globals.ts",
    "../src/globals/select2-globals.ts",
    "../src/ui/widgets/jquerywidgetfn.ts",
    "./testutil/*.ts",
    "./**/*.spec.ts",
    "./**/*.spec.tsx"
  ],
  "exclude": []
}