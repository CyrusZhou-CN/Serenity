{
  "extends": "@serenity-is/base/tsconfig.base.json",
  "compilerOptions": {
    "experimentalDecorators": true,
    "declarationDir": "./out",
    "rootDir": "./src",
    "paths": {
      "@serenity-is/squery": [
        "./src/globals/squery-module"
      ],
      "@optionaldeps/*": [
        "./src/globals/*-module"
      ]
    },
    "outDir": "./out",
    "target": "ES2017"
  },
  "include": [
    "src"
  ]
}